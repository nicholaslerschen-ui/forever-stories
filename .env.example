# Server Configuration
NODE_ENV=development
PORT=3001

# Database (Supabase or PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Or use direct PostgreSQL connection
DATABASE_URL=postgresql://user:password@localhost:5432/forever_stories

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=forever-stories-files
AWS_REGION=us-east-1

# Email Service (SendGrid, AWS SES, etc.)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@foreverstories.com

# Redis (for caching and rate limiting - optional)
REDIS_URL=redis://localhost:6379

# Stripe (for premium features - optional)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGIN=http://localhost:3000,https://app.foreverstories.com

# Feature Flags
ENABLE_VOICE_RESPONSES=true
ENABLE_AI_PERSONA=true
ENABLE_FILE_OCR=true

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
